# Start with the existing DeepVariant image
FROM daylilyinformatics/deepvariant-avx512:1.5.0

# Install OpenVINO
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ca-certificates \
    gnupg2 \
    wget && \
    wget https://apt.repos.intel.com/intel-openvino/2022/intel-openvino.key && \
    apt-key add intel-openvino.key && \
    echo "deb https://apt.repos.intel.com/intel-openvino/2022 all main" > /etc/apt/sources.list.d/intel-openvino.list && \
    apt-get update && \
    apt-get install -y intel-openvino-runtime-ubuntu20.04

# Set environment variables required for OpenVINO
ENV INTEL_OPENVINO_DIR=/opt/intel/openvino_2022
ENV PATH=$INTEL_OPENVINO_DIR/bin:$PATH
ENV LD_LIBRARY_PATH=$INTEL_OPENVINO_DIR/lib:$LD_LIBRARY_PATH

# Make sure the OpenVINO environment is initialized
RUN /opt/intel/openvino_2022/bin/setupvars.sh

# Copy the rest of your DeepVariant setup (if needed)
WORKDIR /opt/deepvariant

# Entry point remains the same
CMD ["/opt/deepvariant/bin/run_deepvariant", "--help"]
