

echo "installing daylily CLI"

if conda -h > /dev/null 2>&1; then
    echo "Conda is working properly."
else
    echo "Error: Conda is not available in this shell. \n\nEXITING." >&2
    return 1
fi


conda create -y -n DAYCLI -c conda-forge python parallel nodejs==18.15.0 aws-parallelcluster==3.10.1 flask=2.2.5
conda activate DAYCLI

# pip install --no-input awscli==1.27.123 


parallel --citation <<< "will cite
"

echo " "
echo "MOVING ON TO DEC CREATION "
sleep 5

source bin/daylily;
