
export PATH=$PATH:/opt/homebrew/bin/
echo "installing daylily CLI"

which brew
if [[ "$?" == "0" ]]; then
    echo "brew detected";
else 
    echo "Installing brew, you'll be prompted for your sudo pw"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi;

brew install conda

conda init
conda init zsh
source ~/.zshrc
conda activate

conda install -y -c conda-forge mamba
mamba create -y -n DAYCLI -c conda-forge python parallel
conda activate DAYCLI
pip install --no-input aws-parallelcluster==3.5.0 awscli

echo " "
echo "MOVING ON TO DEC CREATION "
sleep 5

source bin/daylily;
